        <div class="col-md-12">
            <div class="card" style="margin-bottom: 25px; width: 1000px; height: 700px;  margin-left: 30px;"">

                <div class="card-body" >
                    {{ form_start(form) }}

                    <div class="row">
                        <div class="col-md-6">

                            <div class="form-group label-floating is-empty bmd-form-group">
                                <label class="bmd-label-floating" style="width: 120px;">libelle</label> <br>
                            </div>
                            {{ form_widget(form.libelle, {'attr': { 'class' : 'form-control' , 'style': 'width:550px;'}}) }}

